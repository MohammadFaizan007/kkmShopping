<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/custom_header"
        android:visibility="gone" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cntraint_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">


            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/add_view_bg"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cntraint_main"
                app:layout_constraintVertical_bias="0.0"
                app:tabIndicatorColor="@color/orange"
                app:tabIndicatorHeight="3dp"
                app:tabSelectedTextColor="@color/black"
                app:tabTextAppearance="@style/customTabLayout">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Train"
                    android:textColor="@color/text_color" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bus" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="flights" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hotel" />
            </android.support.design.widget.TabLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:cardBackgroundColor="#ffffff"
                app:cardUseCompatPadding="true"
                app:contentPadding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tab_layout">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp">

                    <RadioGroup
                        android:id="@+id/rg_tickettype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <RadioButton
                            android:id="@+id/rb_bookticket"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:checked="true"
                            android:text="@string/book_tickect"
                            android:textColor="@color/text_color"
                            android:textSize="16sp"
                            android:theme="@style/RadioButtonStyle" />

                        <RadioButton
                            android:id="@+id/rb_checkpnr"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/check_pnr"
                            android:textColor="@color/text_color"
                            android:textSize="16sp"
                            android:theme="@style/RadioButtonStyle" />


                    </RadioGroup>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/book_ticket_lo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="20dp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rg_tickettype">

                        <LinearLayout
                            android:id="@+id/from_to_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_from"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".45"
                                android:backgroundTint="@color/text_color_light"
                                android:padding="5dp">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/et_from"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/text_color_light"
                                    android:drawableTint="@color/text_color_light"
                                    android:hint="@string/from"
                                    android:inputType="text"
                                    android:singleLine="true"
                                    android:textColor="#000"
                                    android:textSize="14sp" />

                            </android.support.design.widget.TextInputLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight=".06"
                                android:gravity="center_vertical">

                                <ImageButton
                                    android:id="@+id/btn_exchange"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/exchange"
                                    android:clickable="true"
                                    android:scaleType="centerInside" />

                            </LinearLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_to"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".45"
                                android:backgroundTint="@color/text_color_light"
                                android:padding="5dp">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/et_to"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/text_color_light"
                                    android:drawableTint="@color/text_color_light"
                                    android:hint="@string/to"
                                    android:inputType="text"
                                    android:singleLine="true"
                                    android:textColor="#000"
                                    android:textSize="14sp" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_journy_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:padding="5dp"
                            app:layout_constraintBottom_toTopOf="@+id/checkBox"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/from_to_ll">


                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_journy_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/text_color_light"
                                android:clickable="false"
                                android:drawableRight="@drawable/calendar"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="@string/journey_date"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="14"
                                android:singleLine="true"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/text_color_light"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>


                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:drawableLeft="@android:color/transparent"
                            android:padding="5dp"
                            android:text="@string/travel_check"
                            android:textColor="@color/text_color"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/input_journy_date" />


                        <Button
                            android:id="@+id/search_train_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/rect_btn_bg_darkgreen"
                            android:text="@string/search_train"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/checkBox" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/pnr_lo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="20dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rg_tickettype">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_pnr_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="14dp"
                            android:padding="5dp"
                            android:textColorHint="#000"
                            app:layout_constraintBottom_toTopOf="@+id/check_pnr_btn"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">


                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_pnr_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/text_color_light"
                                android:drawableTint="@color/text_color_light"
                                android:hint="@string/enter_pnr"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="10"
                                android:singleLine="true"
                                android:textColor="@color/text_color"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/check_pnr_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/rect_btn_bg_darkgreen"
                            android:text="@string/check_pnr_status"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/input_pnr_no" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/recent_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/add_view_bg"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="Recent"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recent_text">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_recent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:focusableInTouchMode="true"
                    android:scrollbars="none"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>


    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>